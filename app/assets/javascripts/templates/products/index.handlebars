<h1>
  Products
  <a {{action newProduct href=true}} class="btn btn-success">
    <i class="icon-white icon-plus"></i>
    New Product
  </a>
</h1>

<br/>

<div class="row">
  {{#if controller.content}}
    <div class="span10">
      <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th style="width: 35px;"></th>
            </tr>
          </thead>
          <tbody>
            {{#each product in controller}}
              <tr>
                <td>{{product.name}}</td>
                <td>{{product.description}}</td>
                <td>{{product.price}}</td>
                <td>
                  <a {{action editProduct product href=true}} class="icon-big icon-black">
                    <i class="icon-edit"></i>
                  </a>

                  <a {{action destroyProduct product}} class="icon-big icon-danger">
                    <i class="icon-trash"></i>
                  </a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
  {{else}}
    <div class="span6 loading">
      Loading products...
    </div>
  {{/if}}
</div>

