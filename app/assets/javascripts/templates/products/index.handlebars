<h1>
  Products
  <a {{action newProduct href=true}} class="btn btn-success">
    <i class="icon-white icon-plus"></i>
    New Product
  </a>
</h1>

{{#if controller.content}}
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each product in controller}}
        <tr>
          <td>{{product.name}}</td>
          <td>{{product.description}}</td>
          <td>{{product.price}}</td>
          <td>
            <a {{action editProduct product href=true}} class="btn btn-mini btn-warning">
              <i class="icon-white icon-edit"></i>
              Edit
            </a>

            <a {{action destroyProduct product}} class="btn btn-mini btn-danger">
              <i class="icon-white icon-trash"></i>
              Delete
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="span6 loading">
    Loading products...
  </div>
{{/if}}

